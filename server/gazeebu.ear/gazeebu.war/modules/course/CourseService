import com.rameses.annotations.*;

class CourseService {
	
    @PersistenceContext("main")
    def em;
    
    @ProxyMethod
    public def create(o) {
        o.objid="COURSE"+new java.rmi.server.UID();
        println "create";
        return em.create("course", o);
    }    
	
	@ProxyMethod
    public def read(o) {
        print "read";
        return em.read("course", o);
    }
    
    @ProxyMethod
    public def update(o) {
        return em.update("course", o);
    }
    
    @ProxyMethod
    public def delete(o) {
        println "delete";
        return em.delete("course", o);
    }
    
    @ProxyMethod
    public def getList() {
        return em.sqlContext.createQuery("select * from course").resultList;
    }
}

