<project name="Upload Test" default="dist" basedir=".">
  <property name="distdir" value="dist"/>
  <property name="builddir" value="build"/>
  <property name="servletjarpath" value="/opt/tomcat/common/lib/"/>

  <path id="class.path">
    <fileset dir="WEB-INF/lib">
      <include name="**/*.jar"/>
    </fileset>
    <fileset dir="${servletjarpath}">
      <include name="servlet.jar"/>
    </fileset>
  </path>

  <target name="setup">
    <mkdir dir="${distdir}"/>
    <mkdir dir="${builddir}"/>
    <mkdir dir="${builddir}/classes"/>
  </target>

  <target name="compile" depends="setup">
    <javac srcdir="src" classpathref="class.path" destdir="${builddir}/classes" debug="true"/>
  </target>

  <target name="dist" depends="compile">
    <war warfile="${distdir}/uploadtest.war" basedir="resources" webxml="WEB-INF/web.xml">
      <lib dir="WEB-INF/lib">
        <include name="*.jar"/>
      </lib>
      <classes dir="${builddir}/classes"/>      
    </war>
  </target>

  <target name="clean">
    <delete dir="${distdir}"/>
    <delete dir="${builddir}"/>
  </target>
</project>